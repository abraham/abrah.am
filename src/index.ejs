<html lang="en" itemscope itemtype="http://schema.org/Person">
  <head>
    <meta charset="utf-8" />

    <meta name="viewport" content="width=device-width,initial-scale=1.0" />
    <meta name="theme-color" content="#fff" />
    <link rel="icon" sizes="192x192" href="https://abrah.am/img/abraham-192.jpg" />
    <link rel="apple-touch-icon" href="https://abrah.am/img/abraham-180.jpg" />
    <link rel="manifest" href="/manifest.json" />

    <title>Abraham Williams</title>
    <meta name="description" content="Abraham Williams is a Developer Advocate at Google" />
    <meta name="author" content="Abraham Williams" />

    <meta name="og:title" property="og:title" content="Abraham Williams" />
    <meta
      name="og:description"
      property="og:description"
      content="Abraham Williams is a Developer Advocate at Google"
    />
    <meta name="og:type" property="og:type" content="public_figure" />
    <meta name="og:image" property="og:image" content="https://abrah.am/img/abraham-512.jpg" />
    <meta name="og:url" property="og:url" content="https://abrah.am/" />

    <meta name="twitter:card" content="summary" />
    <meta name="twitter:site" content="@abraham" />
    <meta name="twitter:title" content="Abraham Williams" />
    <meta name="twitter:description" content="Abraham Williams is a Developer Advocate at Google" />
    <meta name="twitter:image" content="https://abrah.am/img/abraham-512.jpg" />
    <meta name="twitter:url" content="https://abrah.am/" />

    <link rel="shortcut icon" href="https://abrah.am/favicon.ico" />
    <link type="text/plain" rel="author" href="https://abrah.am/humans.txt" />
    <link rel="amphtml" href="https://abrah.am/amp" />
    <link
      rel="alternate"
      type="application/atom+xml"
      title="Abraham Williams - Atom"
      href="https://blog.abrah.am/feeds/posts/default"
    />
    <link
      rel="alternate"
      type="application/rss+xml"
      title="Abraham Williams - RSS"
      href="https://blog.abrah.am/feeds/posts/default?alt=rss"
    />

    <style>
      body {
        background-color: #fff;
        color: #000;
        margin: 0;
        font-family: Roboto, -apple-system, BlinkMacSystemFont, 'Segoe UI', Oxygen-Sans, Ubuntu, Cantarell,
          'Helvetica Neue', sans-serif;
      }

      p {
        font-size: 1.5em;
      }
    </style>
  </head>

  <body>
    <div class="maine">
      <div class="row center">
        <img
          src="/img/abraham-512.jpg"
          alt="Abraham Williams"
          class="avatar"
          itemprop="image"
          width="192"
          height="192"
        />
      </div>

      <header class="row">
        <h1>Hello, I'm <span itemprop="name">Abraham Williams</span></h1>
      </header>

      <div class="row">
        <p class="description" itemprop="description">
          I'm an experienced developer, startup founder, and
          <a rel="noopener" href="https://slides.today">international speaker</a>, who brings a broad range of skills to
          my current role as a Developer Advocate at <a rel="noopener" href="https://developers.google.com/">Google</a>.
          A top 1% contributor at
          <a rel="noopener" href="https://stackoverflow.com/users/story/26406">Stack Overflow</a>
          and formerly a senior developer at
          <a rel="noopener" href="https://bendyworks.com/">Bendyworks</a>, an organizer of
          <a rel="noopener" href="https://gdgmadison.com">GDG Madison</a>, and a
          <a rel="noopener" href="https://developers.google.com/experts/people/abraham-williams"
            >Google Developer Expert</a
          >.
        </p>
      </div>

      <div class="row">
        <h2>Profiles</h2>

        <div class="grid">
          <span class="mdc-evolution-chip-set" role="grid">
            <span class="mdc-evolution-chip-set__chips" role="presentation">
              <% links.forEach((link, index) => { %>
                <span class="mdc-evolution-chip" role="row" id="c<%- index %>">
                  <span class="mdc-evolution-chip__cell mdc-evolution-chip__cell--primary" role="gridcell">
                    <a
                      class="mdc-evolution-chip__action mdc-evolution-chip__action--primary"
                      href="<%- link.url %>"
                      <% if (link.sameAs) { %>itemprop="sameAs"<% } %>
                      rel="noopener">
                      <span class="mdc-evolution-chip__ripple mdc-evolution-chip__ripple--primary"></span>
                      <span class="mdc-evolution-chip__graphic">
                        <span class="mdc-evolution-chip__icon mdc-evolution-chip__icon--primary material-icons"><%- link.icon %></span>
                      </span>
                      <span class="mdc-evolution-chip__text-label"><%- link.text %></span>
                    </a>
                  </span>
                </span>
              <% }); %>
            </span>
          </span>
        </div>
      </div>

      <div class="row">
        <h2>Recent tweets</h2>

        <div class="grid">
          <% tweets.forEach(tweet => { %>
            <div class="grid-item">
              <twitter-status status="<%- JSON.stringify(tweet) %>"></twitter-status>
            </div>
          <% }); %>

          <% if (tweets.length === 0) { %>
            <div class="grid-item">Unable to load tweets.</div>
          <% } %>
        </div>
      </div>

      <div class="row">
        <h2>Projects</h2>

        <div class="promo">
          <p>
            <a href="https://devfestwi.com">DevFest WI, an inclusive, positive conference for all technologists</a>
          </p>
        </div>

        <div class="promo">
          <p>
            <a href="https://bendyworks.com/blog/a-month-of-flutter">A month of Flutter blog series</a>
          </p>
        </div>

        <div class="promo">
          <p>
            <a href="https://pwa.ng/">Progressive Web Apps made ridiculously easy with Angular</a>
          </p>
        </div>

        <div class="grid">
          <% nodePackages.forEach(package => { %>
            <div class="grid-item">
              <node-package name="<%- package.name %>" <% if (package.global) { %>global<% } %>></node-package>
            </div>
          <% }); %>
        </div>

        <div class="grid">
          <% githubRepos.forEach(repo => { %>
            <div class="grid-item">
              <github-repository owner-repo="<%- repo.owner %>"></github-repository>
            </div>
          <% }); %>
        </div>

      </div>
    </div>

    <a class="mdc-fab mdc-fab--extended mdc-fab--exited app-fab--absolute" href="https://twitter.com/abraham">
      <div class="mdc-fab__ripple"></div>
      <svg
        class="mdc-fab__icon"
        aria-labelledby="simpleicons-twitter-icon"
        role="img"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
      >
        <title id="simpleicons-twitter-icon">Twitter icon</title>
        <path
          d="M23.954 4.569c-.885.389-1.83.654-2.825.775 1.014-.611 1.794-1.574 2.163-2.723-.951.555-2.005.959-3.127 1.184-.896-.959-2.173-1.559-3.591-1.559-2.717 0-4.92 2.203-4.92 4.917 0 .39.045.765.127 1.124C7.691 8.094 4.066 6.13 1.64 3.161c-.427.722-.666 1.561-.666 2.475 0 1.71.87 3.213 2.188 4.096-.807-.026-1.566-.248-2.228-.616v.061c0 2.385 1.693 4.374 3.946 4.827-.413.111-.849.171-1.296.171-.314 0-.615-.03-.916-.086.631 1.953 2.445 3.377 4.604 3.417-1.68 1.319-3.809 2.105-6.102 2.105-.39 0-.779-.023-1.17-.067 2.189 1.394 4.768 2.209 7.557 2.209 9.054 0 13.999-7.496 13.999-13.986 0-.209 0-.42-.015-.63.961-.689 1.8-1.56 2.46-2.548l-.047-.02z"
        />
      </svg>
      <span class="mdc-fab__label">Follow</span>
    </a>
  </body>
</html>
