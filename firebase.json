{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      ".*",
      "**/.*"
    ],
    "redirects": [
      {
        "source": "/+",
        "destination": "https://plus.google.com/+AbrahamWilliams",
        "type": 301
      },
      {
        "source": "/contact",
        "destination": "/",
        "type": 301
      },
      {
        "source": "/new",
        "destination": "/",
        "type": 301
      },
      {
        "source": "/new.html",
        "destination": "/",
        "type": 301
      }
    ],
    "headers": [
      /*{
        "source": "*.html",
        "headers": [
          {
            "key": "Content-Security-Policy",
            "value": "default-src 'self' https:; script-src 'self' 'unsafe-inline' https://www.google-analytics.com; style-src 'self' 'unsafe-inline' https://maxcdn.bootstrapcdn.com https://fonts.googleapis.com; img-src 'self' https://www.google-analytics.com; font-src 'self' https://maxcdn.bootstrapcdn.com;"
          }
        ]
      },*/
      {
        "source": "**",
        "headers": [
          {
            "key": "X-Content-Type-Options",
            "value": "nosniff"
          }
        ]
      },
      {
        "source": "**",
        "headers": [
          {
            "key": "X-Frame-Options",
            "value": "DENY"
          }
        ]
      },
      {
        "source": "**",
        "headers": [
          {
            "key": "X-XSS-Protection",
            "value": "1; mode=block"
          }
        ]
      }
    ]
  }
}
